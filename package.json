{
  "name": "@stableness/shadowsocks-node",
  "version": "1.1.0",
  "description": "Yet another shadowsocks client implementation in Node.js",
  "main": "dist/index.cjs",
  "scripts": {
    "build": "tsc && rollup -c",
    "bundle": "NODE_ENV=production npm run build -- --environment BUILD:prod",
    "start": "node dist/bin.js -l :8998 -r pi4:61000 -k $KEY | pino-pretty -t SYS:HH:MM:ss",
    "non.tsc.start": "NODE_ENV=dev rollup -c && npm start",
    "dev": "TSC_NONPOLLING_WATCHER=true tsc-watch --onSuccess 'npm run -s non.tsc.start'"
  },
  "bin": {
    "ss-node": "dist/bin.cjs"
  },
  "files": [
    "dist/bin.cjs",
    "dist/index.cjs"
  ],
  "repository": "github:stableness/shadowsocks-node",
  "homepage": "https://github.com/stableness/shadowsocks-node",
  "bugs": {
    "url": "https://github.com/stableness/shadowsocks-node/issues"
  },
  "license": "GPL-3.0",
  "sideEffects": false,
  "dependencies": {
    "@stableness/wabble": "~0.11.1",
    "command-line-args": "^5.1.1",
    "fp-ts": "^2.10.5",
    "pino": "^6.5.0",
    "ramda": "~0.27.1",
    "rxjs": "^7.1.0"
  },
  "devDependencies": {
    "@types/command-line-args": "^5.0.0",
    "@types/node": "^12.12.54",
    "@types/pino": "^6.3.0",
    "@types/ramda": "~0.27.14",
    "pino-pretty": "^5.1.0",
    "rollup": "^2.23.1",
    "tsc-watch": "^4.2.9",
    "typescript": "~4.3.5"
  }
}
